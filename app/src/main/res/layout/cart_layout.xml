<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorpprimary"
        android:padding="10dp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/alataregular"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="Product quantity"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alataregular"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_marginRight="@dimen/_5sdp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cart_product_size"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="Product size"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:fontFamily="@font/alataregular"
            android:layout_below="@+id/cart_product_name"/>

        <TextView
            android:id="@+id/cart_product_color"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="Product color"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/alataregular"
            android:textStyle="bold"
            android:layout_below="@id/cart_product_quantity"/>

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_below="@+id/cart_product_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:fontFamily="@font/alataregular"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>