<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.LogInActivity"
    android:background="@color/colorPrimary">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="log in"
      android:fontFamily="@font/aclonica"
      android:textSize="40dp"
      android:layout_centerHorizontal="true"
      android:layout_above="@+id/login_phone"
      android:layout_marginBottom="40dp"/>

   <EditText
       android:id="@+id/login_phone"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:background="@layout/edittext_design"
       android:layout_centerHorizontal="true"
      android:layout_above="@+id/login_password"
       android:layout_marginBottom="20dp"
       android:inputType="number"
       android:hint="enter phone"
       android:textColor="@color/colorPrimaryDark"
       android:textColorHint="@color/colorPrimaryDark"
       android:textSize="18sp"
       android:textStyle="bold"/>

   <EditText
       android:id="@+id/login_password"
       android:layout_width="200dp"
       android:inputType="numberPassword"
       android:layout_height="wrap_content"
      android:background="@layout/edittext_design"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:hint="enter password"
       android:textColor="@color/colorPrimaryDark"
       android:textColorHint="@color/colorPrimaryDark"
       android:textSize="18sp"
       android:textStyle="bold"/>

   <CheckBox
       android:id="@+id/remember_me_check"
       android:layout_width="wrap_content"
       android:layout_height="20dp"
       android:layout_below="@+id/login_password"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="10dp"
       android:text="remember me"
       android:textSize="16sp"/>

   <TextView
       android:id="@+id/forget_password"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="forget password"
       android:layout_below="@+id/login_password"
       android:layout_toRightOf="@+id/remember_me_check"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="30dp"/>

   <TextView
       android:id="@+id/iamAdmin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="am admin"
       android:layout_below="@+id/remember_me_check"
       android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
       android:layout_marginRight="20dp"
       android:textColor="#000"/>

   <TextView
       android:id="@+id/iamnotAdmin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="am not admin"
       android:layout_below="@+id/remember_me_check"
       android:layout_marginTop="10dp"
       android:textColor="#000"
       android:layout_marginLeft="20dp"/>

   <Button
       android:id="@+id/log_in"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="log in"
       android:textColor="#000"
      android:layout_below="@+id/iamnotAdmin"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:background="@layout/button_design"/>






</RelativeLayout>