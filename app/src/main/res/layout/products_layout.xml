<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/home_img"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:src="@drawable/socks"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scater"
            android:layout_toRightOf="@+id/home_img"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />

        <RatingBar
            android:id="@+id/home_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/home_title"
            android:layout_toRightOf="@id/home_img"
            android:layout_marginLeft="20dp"
            android:rating="4"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/home_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="here is what we sell"
            android:layout_below="@id/home_rating"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_img"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/home_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:layout_below="@id/home_description"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_img"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:gravity="center"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>