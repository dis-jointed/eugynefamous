<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="#fff">


        <ImageView
            android:id="@+id/home_img"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_140sdp"
            android:src="@drawable/socks"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scater"
            android:layout_toRightOf="@+id/home_img"
            android:textAlignment="center"
            android:textColor="@color/colortext"
            android:fontFamily="@font/alataregular"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp" />

        <RatingBar
            android:id="@+id/home_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/home_title"
            android:layout_toRightOf="@id/home_img"
            android:layout_marginLeft="@dimen/_10sdp"
            android:rating="4"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/home_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="here is what we sell"
            android:layout_below="@id/home_rating"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/home_img"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/colortext"
            android:fontFamily="@font/alataregular"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/home_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/alataregular"
            android:layout_below="@id/home_description"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/home_img"

            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:gravity="center"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>