<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorpprimary"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:fontFamily="@font/alataregular"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="phone number"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/alataregular"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_marginRight="@dimen/_5sdp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="total price"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/alataregular"
            android:textStyle="bold"
            android:layout_below="@+id/order_user_name"/>

        <TextView
            android:id="@+id/order_pay_method"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="pay state"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/alataregular"
            android:textStyle="bold"
            android:layout_below="@+id/order_total_price"/>

        <TextView
            android:id="@+id/order_pay_phone"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="pay id"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/alataregular"
            android:textStyle="bold"
            android:layout_below="@+id/order_pay_method"/>


        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="address, city"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="end"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/alataregular"
            android:textStyle="bold"
            android:layout_below="@id/order_pay_phone"/>

        <TextView
            android:id="@+id/order_date_time"
            android:layout_below="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date time"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:fontFamily="@font/alataregular"
            android:textAlignment="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/show_all_productsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colormajor"
            android:textSize="@dimen/_15ssp"
            android:background="@layout/button_indesign"
            android:text="show this order products"
            />


    </RelativeLayout>

</RelativeLayout>